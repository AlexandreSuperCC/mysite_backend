<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ycao.mysite.dao.AutotaskDao" >
    <sql id="using">
        ifnull(dr,1)=1
    </sql>
    <delete id="realDeleteAttach">
        delete from t_attach
        <where>
            <include refid="using"/>
        </where>
    </delete>
    <delete id="realDeleteMarkdown">
        delete from t_markdown
        <where>
            <include refid="using"/>
        </where>
    </delete>
    <delete id="realDeleteCategory">
        delete from t_category
        <where>
            <include refid="using"/>
        </where>
    </delete>
    <insert id="addLog"  parameterType="java.util.Map">
      insert into t_log(component, content, user_id, ts)
      values(#{cpn},#{content},#{uid},now()) ;
    </insert>
    <select id="getAllLogs" resultType="com.ycao.mysite.model.LogDomain">
        select *
        from t_log
        ORDER BY ts DESC;
    </select>
</mapper>